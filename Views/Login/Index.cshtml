@model Hospital_simple.Models.LoginModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-box">
        <h1 class="login-title">@ViewData["Title"]</h1>
        <hr />

        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

          <div class="mb-3 input-group-custom">
            <label asp-for="Username" class="input-label">Username</label>
            <input asp-for="Username" class="form-control" autocomplete="username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-4 input-group-custom">
            <label asp-for="Password" class="input-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


            @Html.AntiForgeryToken()

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg w-100">Log In</button>
            </div>
        </form>
    </div>
</div>