@model Hospital_simple.Models.MedicineModel
@{
    ViewData["Title"] = "Update Medicine";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UpdateMedicine" method="post" class="glass-container">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MedicineID" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group">
        <label asp-for="Name">Medicine Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-flex">
        <button type="submit" class="btn btn-primary">Update Medicine</button>
        <a asp-action="ManageMedicines" class="btn btn-secondary">Cancel</a>
    </div>
</form>
