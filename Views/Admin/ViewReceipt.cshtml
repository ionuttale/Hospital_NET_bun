@model Hospital_simple.Models.ReceiptModel
@{
    ViewData["Title"] = $"Receipt #{Model.ReceiptID}";
}

<h1 class="dashboard-title">@ViewData["Title"]</h1>

<!-- Consultation Info -->
<div class="glass-container mb-4">
    <div class="card-header">
        <h4>Consultation Info</h4>
    </div>
    <div class="card-body">
        <p><strong>Patient:</strong> @Model.PatientName</p>
        <p><strong>Doctor:</strong> @Model.DoctorName</p>
        <p><strong>Disease:</strong> @Model.Disease</p>
    </div>
</div>

<!-- Prescribed Medicines -->
<h3 class="mt-4">Prescribed Medicines</h3>

@if (!Model.Medicines.Any())
{
    <div class="glass-container p-3">
        <p>No medicines found in this receipt.</p>
    </div>
}
else
{
    <div class="glass-container p-3">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Medicine</th>
                    <th>Quantity</th>
                    <th>Dosage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Medicines)
                {
                    <tr>
                        <td>@m.Medicine.Name</td>
                        <td>@m.Quantity</td>
                        <td>@m.Dosage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a asp-action="ManageConsultations" class="btn btn-secondary">Back to Consultations</a>
</div>
