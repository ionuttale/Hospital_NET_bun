@model Hospital_simple.Models.ConsultationModels
@{
    ViewData["Title"] = "Create Consultation";
}

<div class="glass-container">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="CreateConsultation" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="PatientID" class="form-label">Patient</label>
            <select asp-for="PatientID" asp-items="ViewBag.Patients" class="form-control">
                <option value="">-- Select Patient --</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DoctorID" class="form-label">Doctor</label>
            <select asp-for="DoctorID" asp-items="ViewBag.Doctors" class="form-control">
                <option value="">-- Select Doctor --</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConsultationDate" class="form-label">Date</label>
            <input asp-for="ConsultationDate" type="datetime-local" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Disease" class="form-label">Disease</label>
            <input asp-for="Disease" placeholder="Disease" class="form-control" />
        </div>

        <div class="form-group mb-4">
            <label asp-for="Observation" class="form-label">Observation</label>
            <textarea asp-for="Observation" placeholder="Observation" class="form-control" style="height: 100px;"></textarea>
        </div>

        <div class="d-flex gap-2 flex-wrap">
            <button type="submit" class="btn btn-secondary">Create</button>
            <a asp-action="ManageConsultations" class="btn btn-secondary">Cancel</a>
        </div>

    </form>

</div>
