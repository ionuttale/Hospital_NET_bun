@model IEnumerable<Hospital_simple.Models.DoctorModel>
@{
    ViewData["Title"] = "Manage Doctors";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CreateDoctor" class="btn btn-primary">Add New Doctor</a>
</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Specialization</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.FirstName</td>
                <td>@doc.LastName</td>
                <td>@doc.Email</td>
                <td>@doc.Specialization</td>
                <td class="d-flex flex-wrap gap-2">
                    <a asp-action="UpdateDoctor" asp-route-id="@doc.DoctorID" class="btn btn-warning btn-sm">Update</a>
                    <form asp-action="DeleteDoctor" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@doc.DoctorID" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete Dr. @doc.FirstName @doc.LastName? This also deletes their linked user account.');">
                             Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>