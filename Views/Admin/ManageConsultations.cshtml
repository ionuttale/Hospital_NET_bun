@model IEnumerable<Hospital_simple.Models.ConsultationModels>
@{
    ViewData["Title"] = "Manage Consultations";
}

<div class="glass-container">

    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="CreateConsultation" class="btn btn-primary">Add New Consultation</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Patient</th>
                <th>Date</th>
                <th>Disease</th>
                <th>Observation</th>
                <th>Receipt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="Patient">@Html.DisplayFor(modelItem => item.PatientName)</td>
                    <td data-label="Date">@item.ConsultationDate.ToString("g")</td>
                    <td data-label="Disease">@Html.DisplayFor(modelItem => item.Disease)</td>
                    <td data-label="Observation">@Html.DisplayFor(modelItem => item.Observation)</td>
                    <td data-label="Receipt">
                        @if (item.ReceiptID.HasValue)
                        {
                            <a asp-action="ViewReceipt" asp-route-id="@item.ReceiptID" class="btn btn-secondary btn-sm">View</a>
                        }
                    </td>
                    <td data-label="Actions">
                        <a asp-action="UpdateConsultation" asp-route-id="@item.ConsultationID" class="btn btn-secondary btn-sm">Update</a>
                        <form asp-action="DeleteConsultation" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.ConsultationID" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
