@model IEnumerable<Hospital_simple.Models.PatientModel>
@{
    ViewData["Title"] = "Manage My Patients";
}

<h2>Manage My Patients</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Insurance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Insurance)</td>
                <td class="d-flex flex-wrap gap-2">
                    <a asp-action="UpdatePatient" asp-route-id="@item.PatientID" class="btn btn-sm btn-warning">Update</a>
                    <form asp-action="DeletePatient" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.PatientID" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" 
                                onclick="return confirm('Are you sure you want to delete this patient? This action cannot be undone.')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>