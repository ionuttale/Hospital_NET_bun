@model Hospital_simple.Models.MedicineModel
@{
    ViewData["Title"] = "Create Medicine";
}

<h2>Create Medicine</h2>

<form asp-action="CreateMedicine" method="post" class="glass-effect">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Medicine</button>
    <a asp-action="ManageMedicines" class="btn btn-secondary">Cancel</a>
</form>
