@model Hospital_simple.Models.MedicineModel
@{
    ViewData["Title"] = "Create Medicine";
}

<div class="glass-container">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="CreateMedicine" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn">Create Medicine</button>
            <a asp-action="ManageMedicines" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>
