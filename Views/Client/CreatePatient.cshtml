@model Hospital_simple.Models.PatientModel
@{
    ViewData["Title"] = "Create Patient";
}

<div class="glass-container">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="CreatePatient" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" placeholder="Address" />
        </div>

        <div class="form-group">
            <label asp-for="Insurance"></label>
            <input asp-for="Insurance" placeholder="Insurance" />
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn">Create Patient</button>
            <a asp-action="ManagePatients" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>
