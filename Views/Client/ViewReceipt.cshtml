@model Hospital_simple.Models.ReceiptModel
@{
    ViewData["Title"] = $"Receipt #{Model.ReceiptID}";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="glass-container p-3 mb-4">
    <h4>Consultation Info</h4>
    <div class="row mb-2">
        <div class="col-md-4"><strong>Patient:</strong> @Model.PatientName</div>
        <div class="col-md-4"><strong>Doctor:</strong> @Model.DoctorName</div>
        <div class="col-md-4"><strong>Disease:</strong> @Model.Disease</div>
    </div>
</div>

<div class="glass-container p-3">
    <h4 class="mb-3">Prescribed Medicines</h4>

    @if (!Model.Medicines.Any())
    {
        <p>No medicines found in this receipt.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Medicine</th>
                    <th>Quantity</th>
                    <th>Dosage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Medicines)
                {
                    <tr>
                        <td>@m.Medicine.Name</td>
                        <td>@m.Quantity</td>
                        <td>@m.Dosage</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        <a asp-action="ManageConsultations" class="btn btn-secondary">Back to Consultations</a>
    </div>
</div>
