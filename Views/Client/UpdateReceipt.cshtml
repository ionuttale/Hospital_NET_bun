@model Hospital_simple.Models.ReceiptModel
@{
    ViewData["Title"] = "Update Receipt";
}

<h2>Update Receipt</h2>

<form asp-action="UpdateReceipt" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReceiptID" />
    <input type="hidden" asp-for="ConsultationID" />

    <div class="row">
        <div class="col-md-4">
            <strong>Patient:</strong> @Model.PatientName
        </div>
        <div class="col-md-4">
            <strong>Doctor:</strong> @Model.DoctorName
        </div>
        <div class="col-md-4">
            <strong>Disease:</strong> @Model.Disease
        </div>
    </div>

    <hr />
    
    <h4>Prescribed Medicines</h4>

    @if (!Model.Medicines.Any())
    {
        <p>No medicines are currently on this receipt.</p>
    }

    @for (int i = 0; i < Model.Medicines.Count; i++)
    {
        <input type="hidden" asp-for="Medicines[i].ReceiptMedicineID" />

        <div class="row g-3 mb-2 align-items-end p-2 border rounded">
            <div class="col-md-4">
                <label asp-for="Medicines[i].Medicine.MedicineID" class="form-label">Medicine</label>
                <select asp-for="Medicines[i].Medicine.MedicineID" class="form-control" 
                        asp-items="@(new SelectList(ViewBag.Medicines, "Value", "Text", Model.Medicines[i].Medicine.MedicineID))">
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Medicines[i].Quantity" class="form-label">Quantity</label>
                <input type="number" asp-for="Medicines[i].Quantity" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Medicines[i].Dosage" class="form-label">Dosage</label>
                <input asp-for="Medicines[i].Dosage" class="form-control" />
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Update Medicines</button>
    <a asp-action="ManageReceipts" class="btn btn-secondary mt-3">Cancel</a>
</form>