@model Hospital_simple.Models.PatientModel
@{
    ViewData["Title"] = "Update Patient";
}

<h2>Update Patient</h2>

<form asp-action="UpdatePatient" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PatientID" />

    <div class="form-group mb-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    
    <div class="form-group mb-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Insurance"></label>
        <input asp-for="Insurance" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="ManagePatients" class="btn btn-secondary">Cancel</a>
</form>