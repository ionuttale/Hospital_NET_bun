@model IEnumerable<Hospital_simple.Models.ReceiptModel>
@{
    ViewData["Title"] = "Manage Receipts";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<p class="text-center mb-4">
    <a asp-action="CreateReceipt" class="btn btn-primary">Add New Receipt</a>
</p>

<div class="glass-container p-3">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Disease (from Consultation)</th>
                <th>Medicines</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Disease)</td>
                    <td>
                        @if (item.Medicines.Any())
                        {
                            <ul class="mb-0 ps-3">
                                @foreach (var med in item.Medicines)
                                {
                                    <li>
                                        <strong>@med.Medicine.Name</strong> 
                                        (Qty: @med.Quantity, Dosage: @med.Dosage)
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No medicines prescribed.</span>
                        }
                    </td>
                    <td class="d-flex flex-wrap gap-2">
                        <a asp-action="UpdateReceipt" asp-route-id="@item.ReceiptID" class="btn btn-sm btn-warning">Update</a>
                        <form asp-action="DeleteReceipt" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.ReceiptID" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" 
                                    onclick="return confirm('Are you sure you want to delete this receipt?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
