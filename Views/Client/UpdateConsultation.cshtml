@model Hospital_simple.Models.ConsultationModels
@{
    ViewData["Title"] = "Update Consultation";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="glass-container p-3">
    <form asp-action="UpdateConsultation" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="ConsultationID" />
        <input type="hidden" asp-for="DoctorID" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="PatientID" class="form-label">Patient</label>
            <select asp-for="PatientID" class="form-select" asp-items="ViewBag.Patients">
            </select>
            <span asp-validation-for="PatientID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConsultationDate" class="form-label">Date</label>
            <input asp-for="ConsultationDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="ConsultationDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Disease" class="form-label">Disease</label>
            <input asp-for="Disease" class="form-control" />
            <span asp-validation-for="Disease" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Observation" class="form-label">Observation</label>
            <textarea asp-for="Observation" class="form-control" style="height: 100px"></textarea>
            <span asp-validation-for="Observation" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 flex-wrap">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ManageConsultations" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>