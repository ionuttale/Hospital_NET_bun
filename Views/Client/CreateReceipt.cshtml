@model Hospital_simple.Models.CreateReceiptModel
@{
    ViewData["Title"] = "Create Receipt";
}

<div class="glass-container">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="CreateReceipt" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Consultation Link Section -->
        <div class="glass-container mb-3 p-3">
            <h4>1. Link to Consultation</h4>
            <div class="form-group mt-2">
                <label asp-for="ConsultationID" class="form-label">Consultation</label>
                <select asp-for="ConsultationID" class="form-select" asp-items="ViewBag.Consultations">
                    <option value="">-- Select a consultation --</option>
                </select>
                <span asp-validation-for="ConsultationID" class="text-danger"></span>
            </div>
        </div>

        <!-- Medicines Section -->
        <div class="glass-container mb-3 p-3">
            <h4>2. Prescribe Medicines</h4>
            <p>Fill out lines to add a medicine. Leave blank to ignore.</p>

            <div class="row g-3 mb-2 border-bottom pb-2">
                <div class="col-md-5"><strong>Medicine</strong></div>
                <div class="col-md-2"><strong>Quantity</strong></div>
                <div class="col-md-5"><strong>Dosage</strong></div>
            </div>

            @for (int i = 0; i < Model.Medicines.Count; i++)
            {
                <div class="row g-3 mb-2">
                    <div class="col-md-5">
                        <select asp-for="Medicines[i].MedicineID" class="form-select" asp-items="ViewBag.Medicines">
                            <option value="0">-- Select Medicine --</option>
                        </select>
                        <span asp-validation-for="Medicines[i].MedicineID" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <input type="number" asp-for="Medicines[i].Quantity" class="form-control" placeholder="Qty" min="0" />
                        <span asp-validation-for="Medicines[i].Quantity" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Medicines[i].Dosage" class="form-control" placeholder="e.g., 2 times a day" />
                        <span asp-validation-for="Medicines[i].Dosage" class="text-danger"></span>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Create Receipt</button>
            <a asp-action="ManageReceipts" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
